{% extends "layout.twig" %}

{% block content %}
    <br>
    <div class="row">        
        <div class="col-sm-8">
            <h1>Users</h1>
            <div class="table-responsive table-responsive-sm">
                <table class="table table-sm">
                    <thead>
                        <tr>
                        <th scope="col">#</th>
                        <th scope="col">Email</th>
                        <th scope="col">Password</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for user in users %}
                            <tr>
                                <th scope="row">{{ user.id }}</th>
                                <td>{{ user.email }}</td>
                                <td>{{ user.password }}</td>                                
                            </tr>
                        {% endfor %}                        
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}